@model SignInModel
@{
    ViewBag.Title = "Signup";
}
<main>
    <h1>Sign in</h1>
    <h2>It looks like you already have an account. <br />Log in to connect to @Theme.Name.</h2>
    @using (Html.BeginForm(nameof(SignupController.SignIn), null, FormMethod.Post, new { data_turboform = true, autocomplete = "off" })) {
        @Html.HiddenFor(x => x.RememberMe)
        <div class="form-group">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Username", autocomplete = "off" })
            <p class="form-text">@Html.ValidationMessageFor(x => x.Username)</p>
        </div>
        <div class="form-group">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password", autocomplete = "off" })
            <p class="form-text">@Html.ValidationMessageFor(x => x.Password)</p>
        </div>
        @Html.ValidationSummary(true)
        <div class="buttons text-center">
            <button type="submit" class="button">Sign in</button>
        </div>
    }
</main>

@section back {
    <a class="back d-none" href="https://get.weavy.com/signup/start">@Html.SvgIcon("arrow-left") <small>Back</small></a>
}
