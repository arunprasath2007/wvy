@model Role
@{
    Title = "Add role";
    Back = Url.Action<RolesController>(c => c.Index(null));
}

<div class="container my-3">
    @using (Html.BeginForm(nameof(RolesController.Insert), null, FormMethod.Post, new { autocomplete = "off", data_turboform = "", novalidate = "" })) {

        @Html.EditorsForModel()
        <div class="form-buttons">
            <button type="submit" class="btn btn-primary btn-load waves-effect" title="Save">Save</button>
            <a href="@Back" class="btn btn-outline-secondary mr-auto waves-effect">Cancel</a>
        </div>

    }



</div>
