@model Role
@{
    Title = "Edit role";
    Back = Model.Url();
}


<div class="container my-3">
    @using (Html.BeginForm(nameof(RolesController.Update), null, new { id = Model.Id }, FormMethod.Post, new { autocomplete = "off", data_turboform = "", novalidate = "" })) {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.EditorsForModel()
        <div class="form-buttons">
            <button type="submit" name="button" value="@nameof(RolesController.Update)" class="btn btn-primary btn-load waves-effect" title="Save">Save</button>
            <a href="@Back" class="btn btn-outline-secondary mr-auto waves-effect">Cancel</a>
        </div>
    }
</div>
