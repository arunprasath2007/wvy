@model StatisticsEntry
@{
    Title = "Usage statistics";
}

<div class="container-fluid mt-3">
<table class="table table-hover">
    <thead>
        <tr>
            <th>Statistics</th>
            <th class="text-right" style="width:100px;">Count</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Comments</td>
            <td class="text-right">@Model.CommentCount</td>
        </tr>
        <tr>
            <td>Events</td>
            <td class="text-right">@Model.EventCount</td>
        </tr>
        <tr>
            <td>Files (@FileHelper.FileSizeAsString(Model.FileSize))</td>
            <td class="text-right">@Model.FileCount</td>
        </tr>
        <tr>
            <td>Folders</td>
            <td class="text-right">@Model.AppCount</td>
        </tr>
        <tr>
            <td>Index</td>
            <td class="text-right">@Model.IndexCount</td>
        </tr>
        <tr>
            <td>Items</td>
            <td class="text-right">@Model.ItemCount</td>
        </tr>
        <tr>
            <td>Likes</td>
            <td class="text-right">@Model.LikeCount</td>
        </tr>
        <tr>
            <td>Messages</td>
            <td class="text-right">@Model.MessageCount</td>
        </tr>
        <tr>
            <td>Posts</td>
            <td class="text-right">@Model.PostCount</td>
        </tr>
        <tr>
            <td>Spaces</td>
            <td class="text-right">@Model.SpaceCount</td>
        </tr>
        <tr>
            <td>Stars</td>
            <td class="text-right">@Model.StarCount</td>
        </tr>
        <tr>
            <td>Tags</td>
            <td class="text-right">@Model.TagCount</td>
        </tr>
        <tr>
            <td>Tasks</td>
            <td class="text-right">@Model.TaskCount</td>
        </tr>
        <tr>
            <td>Users</td>
            <td class="text-right">@Model.UserCount</td>
        </tr>

    </tbody>
</table>
</div>
