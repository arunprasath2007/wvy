@model AboutModel
@{
  Title = "About Weavy";
  Back = Url.Action<HomeController>(c => c.Index());
}

<div class="cover">
  <div class="container text-center py-4">
    @Html.IconImg(128)
    <div class="text-center pt-3">Weavy v@(Model.Version) was put together by a team of talented developers in Malmö, Sweden &ndash; with help from the following awesome open source projects.</div>
  </div>
</div>

<div class="container my-3">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th class="text-right" style="width:175px;">License</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var proj in Model.Projects) {
        <tr data-href="@proj.Url">
          <td><a href="@proj.Url" target="_blank"><span>@proj.Name</span>@Html.SvgIcon("open-in-new", size: 18, htmlAttributes: new { @class = "i-inline ml-1" })</a></td>
          <td class="text-right"><a href="@proj.LicenseUrl" target="_blank">@proj.License</a></td>
        </tr>
      }
    </tbody>
  </table>
</div>

<footer class="text-muted text-center my-3">
  <small>© Incentive, Inc. 2017–@DateTime.Now.Year. All rights reserved. <a href="@(Url.Action<HomeController>(c => c.About()))">About Weavy.</a></small>
</footer>
