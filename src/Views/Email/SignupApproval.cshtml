@model Weavy.Core.Models.SignupApprovalEmail
@* STANDARD MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td valign="top" class="textContent">
                                            Hi there,
                                            <br/><br/>
                                            Your request to join @Model.Theme.Name was approved. To sign up just click the button below:
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // STANDARD MODULE *@


@* BUTTON MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell bottomShim">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="260" class="emailButton">
                                    <tr>
                                        <td align="center" valign="middle" class="buttonContent">
                                            <a href="/register/@Model.Invite.Token" target="_blank">Sign up</a>
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // BUTTON MODULE *@


@* STANDARD MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td valign="top" class="textContent">
                                            Cheers,<br/>
                                            The Doplace Team
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // STANDARD MODULE *@
