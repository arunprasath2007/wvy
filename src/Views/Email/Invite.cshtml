@model Weavy.Core.Models.InviteEmail
@* STANDARD MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td valign="top" class="textContent">
                                            Hi,
                                            <br />
                                            <br />
                                            @if (Model.Invite.IsExternal) {
                                                <text>I invite you to join <strong>@Model.Invite.Space.Name</strong> on @Model.Theme.Name.</text>
                                            } else {
                                                <text>I want you to join @Model.Theme.Name.</text>
                                            }
                                            @if (Model.Invite.ApprovedById != null) {
                                                <text>To sign up for an account, just click the button below:</text>
                                            } else {
                                                <text>To accept the invite, just click the button below:</text>
                                            }
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // STANDARD MODULE *@

@* BUTTON MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell bottomShim">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="260" class="emailButton">
                                    <tr>
                                        <td align="center" valign="middle" class="buttonContent">
                                            <a href="/register/@Model.Invite.Token" target="_blank">@(Model.Invite.ApprovedById != null ? "Sign up": "Accept")</a>
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // BUTTON MODULE *@

@* STANDARD MODULE // *@
<tr>
    <td align="center" valign="top">
        @* CENTERING TABLE // *@
        <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td align="center" valign="top">
                    @* FLEXIBLE CONTAINER // *@
                    <table border="0" cellpadding="0" cellspacing="0" width="600" class="flexibleContainer">
                        <tr>
                            <td align="center" valign="top" width="600" class="flexibleContainerCell">
                                @* CONTENT TABLE // *@
                                <table border="0" cellpadding="0" cellspacing="0" width="100%">
                                    <tr>
                                        <td valign="top" class="textContent">
                                            Cheers,<br />
                                            @Model.Invite.CreatedBy.GetTitle()
                                        </td>
                                    </tr>
                                </table>
                                @* // CONTENT TABLE *@
                            </td>
                        </tr>
                    </table>
                    @* // FLEXIBLE CONTAINER *@
                </td>
            </tr>
        </table>
        @* // CENTERING TABLE *@
    </td>
</tr>
@* // STANDARD MODULE *@

@section footer {
    @* CONTENT TABLE // *@
    <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
            <td valign="top" class="footerContent">
                This invite will automatically expire if not used within @((int)(Model.Invite.ExpiresAt - DateTime.UtcNow).TotalDays) days.
            </td>
        </tr>
    </table>
    @* // CONTENT TABLE *@
}
