@model InviteUsersModel
@{
    Title = "People";
}

@section navbar_left {
    <div class="navbar-icons">
        <a class="btn btn-icon" href="@(Url.Action<PeopleController>(c => c.Index(null, null, null)))">@Html.SvgIcon("arrow-left")</a>
    </div>
}

<div class="container mt-3">
    <h3 class="display-3">Invite</h3>
    <p>Invite people to @Theme.GetName() by entering their emails below.</p>
    <form class="invite-form" action="@Url.Action(nameof(PeopleController.Invite))" method="post" data-turboform>
        @Html.EditorFor(m => m.Invite1)
        @Html.EditorFor(m => m.Invite2)
        @Html.EditorFor(m => m.Invite3)
        <button type="submit" class="btn btn-primary">Invite</button>
        <a href="@Url.Action(nameof(PeopleController.Index))" class="btn btn-outline-secondary waves-effect">Cancel</a>
    </form>
</div>
