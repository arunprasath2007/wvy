@model App
@{
    Title = "Edit " + Model.MetaData().Name;
    Back = Url.Back(Model.Url());
}


<div class="container my-3">
    @using (Html.BeginForm(nameof(AppController.Update), typeof(AppController).ControllerName(), FormMethod.Post, htmlAttributes: new { id = "form-edit", data_turboform = "", novalidate = "" })) {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.HiddenFor(x => x.AppGuid)
        @Html.EditorFor(x => x.Name)
        @*@Html.EditorsForModel()*@
        <div class="buttons">
            <button type="submit" class="btn btn-outline-primary">Save</button>
            <a href="@Back" class="btn btn-link">Cancel</a>
        </div>
    }
</div>
