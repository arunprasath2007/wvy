@model Post
@{
    Title = "Post details";
    Back = Url.Back(Model.SpaceId != null && Model.SpaceId != SpaceService.SystemId ? Url.Action<SpaceController>(c => c.Get(Model.SpaceId.Value, null)) : Url.Action<HomeController>(c => c.Index()));
}

<div class="container my-3">
    @Html.Partial("_Post", Model, new ViewDataDictionary { { "details", true } })
</div>

@section footer {
    @{
        Html.RenderPartial("_FeedbackModal");
        Html.RenderPartial("_EditPostModal");
        Html.RenderPartial("_MovePostModal");
        Html.RenderPartial("_EditCommentModal");
    }
}
