@model PostMoveModel

<form class="modal-content" action="@(Url.Action<PostController>(x => x.Move(Model.Post.Id, null)))" method="post" data-turboform>
    <div class="modal-header border-0 pb-0">
        <h5 class="modal-title">Move post</h5>
        <button type="button" class="btn btn-icon" data-dismiss="modal">@Html.SvgIcon("close")</button>
    </div>
    <div class="modal-body">
        @Html.EditorFor(x => x.SpaceId, new { Permission = Permission.Post })
    </div>
    <div class="modal-footer border-0">
        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary btn-load">Move</button>
    </div>
</form>
