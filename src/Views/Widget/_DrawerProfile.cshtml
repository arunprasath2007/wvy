<aside id="drawer-profile" class="drawer drawer-left">
    <header class="drawer-header">
        <div class="text-center pt-3 pb-2">
            @User.AvatarImg(64)
            <p class="drawer-title px-1">@User.Title <small>@@@User.Username</small></p>
        </div>
    </header>
    <div class="drawer-body scroll-y">
        <nav class="nav flex-column">
            <a class="dropdown-item" href="@(Url.Action<WidgetController>(c => c.EditProfile()))">@Html.SvgIcon("account") User profile</a>
            <a class="dropdown-item" href="@(Url.Action<WidgetController>(c => c.EditSettings()))">@Html.SvgIcon("settings") User settings</a>
            <a class="dropdown-item" href="@(Url.Action<WidgetController>(c => c.EditAccount()))">@Html.SvgIcon("account-network") Account details</a>
            <a class="dropdown-item" href="@(Url.Action<WidgetController>(c => c.EditPassword()))">@Html.SvgIcon("account-key") Change password</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="@Url.Action(nameof(AccountController.SignOut), typeof(AccountController).ControllerName(), new { area = "" , path = "/notify" })" title="Sign out" data-widget-event data-widget-name="signingOut">@Html.SvgIcon("logout") Sign out</a>
        </nav>
    </div>
</aside>
