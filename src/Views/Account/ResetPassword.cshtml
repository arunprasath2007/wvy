@model PasswordResetModel
@{
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
    Title = "Reset password";
}
<div class="container mt-5">
    <div class="row justify-content-sm-center">
        <div class="col-sm-6">
            <div class="text-center mb-3">
                @Html.IconImg(48)
            </div>
            <h1 class="display-3">@Title</h1>
            <p>Select a new password in the form below.</p>

            @using (Html.BeginForm(nameof(AccountController.ResetPassword), typeof(AccountController).ControllerName(), FormMethod.Post, new { data_turboform = true, novalidate = "" })) {
                @Html.AntiForgeryToken()
                @Html.EditorsForModel()
                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary btn-load">Set password</button>
                    @Html.ActionLink("Cancel", nameof(AccountController.SignIn), typeof(AccountController).ControllerName(), null, new { @class = "btn btn-outline-secondary" })
                </div>
            }
        </div>
    </div>
</div>
