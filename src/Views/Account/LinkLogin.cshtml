@model Weavy.Web.Models.LinkLoginModel
@{
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
    Title = "Link login";
}
<div class="container">
    <div class="row justify-content-sm-center">
        <div class="col-sm-6">
            <div class="text-center mb-3">
                @Html.IconImg(48)
            </div>
            <h1 class="display-3">Link login</h1>
            <p>Looks like we already have account for <strong>@Model.Email</strong> on @WeavyContext.Current.Theme.GetName(). Enter your password to avoid duplicate accounts.</p>

            @using (Html.BeginForm(nameof(AccountController.LinkLogin), typeof(AccountController).ControllerName(), FormMethod.Post, new { data_turboform = true, novalidate = "" })) {
                @Html.AntiForgeryToken()
                @Html.EditorsForModel()
                <div class="form-buttons">
                    <button type="submit" class="btn btn-primary btn-load waves-effect">Sign in</button>
                    @Html.ActionLink("Cancel", nameof(AccountController.SignIn), typeof(AccountController).ControllerName(), null, new { @class = "btn btn-outline-secondary waves-effect" })
                </div>
            }
        </div>
    </div>
</div>
