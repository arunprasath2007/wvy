@model Weavy.Web.Models.RegisterWindowsModel
@{
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
    Title = "Associate account";
}
<div class="container mt-5">
    <div class="row justify-content-sm-center">
        <div class="col-sm-6">
            <div class="text-center mb-3">
                @Html.IconImg(48)
            </div>
            <h1 class="display-3">Do you have an account?</h1>
            <p>Hi, we can't find an account for <strong>@Model.SamAccountName</strong>. Have you used @Theme.Name before?</p>

            @using (Html.BeginForm(nameof(AccountController.RegisterWindows), typeof(AccountController).ControllerName(), FormMethod.Post, new { data_turboform = true, novalidate = "" })) {
                @Html.AntiForgeryToken()
                <div class="form-buttons">
                    <a href="@Url.Action(nameof(AccountController.AddWindows), typeof(AccountController).ControllerName())" class="btn btn-primary btn-load">Yes, I have an account</a>
                    <button type="submit" class="btn btn-secondary btn-load">No, I am a new user</button>
                </div>
            }
        </div>
    </div>
</div>
