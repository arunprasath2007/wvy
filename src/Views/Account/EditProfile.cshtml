@model User
@{
    Title = "People";
}

@section navbar_left {
    <div class="navbar-icons">
        <a class="btn btn-icon" href="@User.Url()">@Html.SvgIcon("arrow-left")</a>
    </div>
}

@section navbar_secondary {
    @Html.Partial("_Navbar", User)
}

<div class="container-fluid mt-3">
    @using (Html.BeginForm(nameof(AccountController.UpdateProfile), typeof(AccountController).ControllerName(), FormMethod.Post, new { id = "update-profile-form", autocomplete = "off", data_turboform = "", novalidate = "" })) {
        @Html.HttpMethodOverride(HttpVerbs.Put)
        @Html.AntiForgeryToken()
        @Html.EditorsForModel(Model.Profile)
        <div class="form-buttons">
            <button type="submit" class="btn btn-primary btn-load waves-effect" title="Save">Save</button>
            <a href="@User.Url()" class="btn btn-outline-secondary mr-auto waves-effect">Cancel</a>
        </div>
    }
</div>
