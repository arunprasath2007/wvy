@model Weavy.Web.Models.RegisterWindowsModel
@{
    Layout = "~/Views/Shared/_LayoutBasic.cshtml";
    Title = "Associate account";
}
<div class="container">
    <div class="row justify-content-sm-center">
        <div class="col-sm-6">
            <header>
                <div class="text-center mb-3">
                    @Html.IconImg(48)
                </div>
                @if (Model.First) {
                    <h1 class="display-3">Confirm switch to Windows authentication</h1>
                    <p>Hi <strong>@Model.SamAccountName</strong>, it looks like you recently switched from using local accounts to windows authentication.</p>
                    <p>To complete the switch we need you to enter the credentials of a Weavy administrator, e.g. the username and password of the person that installed Weavy.</p>
                } else {
                    <h1 class="display-3">Associate with existing account</h1>
                    <p>In order to avoid duplicate accounts we need you to enter your username and password and associate <strong>@Model.SamAccountName</strong> with your existing Weavy account.</p>
                }
            </header>

            @using (Html.BeginForm(nameof(AccountController.AddWindows), typeof(AccountController).ControllerName(), FormMethod.Post, new { data_turboform = true, novalidate = "" })) {
                @Html.AntiForgeryToken()
                @Html.EditorsForModel()
                <div class="form-buttons">
                    @if (Model.First) {
                        <button type="submit" class="btn btn-primary btn-load waves-effect">Confirm</button>
                    } else {
                        <button type="submit" class="btn btn-primary btn-load waves-effect">Associate</button>
                        @Html.ActionLink("Cancel", nameof(AccountController.RegisterWindows), typeof(AccountController).ControllerName(), null, new { @class = "btn btn-primary waves-effect" })
                    }
                </div>
            }
        </div>
    </div>
</div>
