@model Space

@if (Model.HasPermission(Permission.Post)) {
    <form class="card card-weavy-editor post-form" action="@(Url.Action<PostController>(c => c.Insert(Model.Id, null)))" method="post">
        <textarea id="text" class="form-control" name="text" data-editor-location="discuss"></textarea>
        <div class="post-backdrop"></div>
    </form>
}

