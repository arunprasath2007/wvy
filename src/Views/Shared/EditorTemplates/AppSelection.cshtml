@model List<Weavy.Web.Models.AppSelectionModel>

@for (int i = 0; i < Model.Count(); i++) {
    var meta = Model[   i].App.MetaData();
    <tr>
        <td>
            @Html.HiddenFor(x => Model[i].AppId)
            @Html.CheckBoxFor(x => Model[i].Selected)
        </td>
        <td>@Html.SvgIcon(Model[i].App)</td>
        <td>@meta.Name - @meta.Description</td>
    </tr>
}


